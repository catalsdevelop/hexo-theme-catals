extends partial/layout

block site_title
  != page.title + " Â· " + config.title

block description
  - var desc = page.desc || page.title + ' - ' + config.author;
  meta(name="description", content=desc)

block container
  if page.path === 'tags/index.html'
    include mixins/post
    +tag()
  else
    include mixins/post
    +post(page)

block pagination
  if page.path !== 'tags/index.html'
    include mixins/paginator
    +post()
    include partial/comment

block copyright
    include partial/copyright