meta(charset="utf-8")
meta(name="X-UA-Compatible", content="IE=edge")

title 
    block site_title
        = config.title
block description
    - des = config.description || 'catalsdevelop blog'
    meta(name="description", content= des)

meta(name="viewport", content="width=device-width, initial-scale=1")
link(rel="short icon", href=url_for(theme.favicon), type="image/png")
link(rel="stylesheet", href=url_for("css/catals.css"))
    
if theme.googlefonts
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600||Roboto Mono" type='text/css')
else 
    link(rel="stylesheet", href="http://fonts.useso.com/css?family=Source+Sans+Pro:400,600|Roboto Mono" type='text/css')
